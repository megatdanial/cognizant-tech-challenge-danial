<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Postal_Code_Validation</fullName>
    <active>true</active>
    <description>Ensure postal code is a 6-digit number</description>
    <errorConditionFormula>NOT(REGEX(MailingPostalCode, &quot;^[0-9]{6}$&quot;))</errorConditionFormula>
    <errorMessage>Should be 6 digit number only (e.g. 123456)</errorMessage>
</ValidationRule>
